<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.ex0908_bbs.mapper.CommMapper">

    <select id="list" resultType="com.sist.ex0908_bbs.vo.CommVO"
     parameterType="String">
        select * from comment_t where b_idx = #{idx}
    </select>

    <insert id="add" parameterType="Map">
        insert into comment_t (writer, content, pwd, write_date, ip, b_idx)
        values(#{writer}, #{content}, #{pwd}, now(), #{ip}, #{b_idx})
    </insert>


</mapper>