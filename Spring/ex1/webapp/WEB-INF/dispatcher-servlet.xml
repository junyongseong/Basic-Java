<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <mvc:annotation-driven/>
    <!--    이게 경로 지정 한거-->
<!--    name걸어준건 추상화 컨트롤러 썼을때-->

    <bean name="/ex1" class="com.sist.ex1.TestAction"/>
    <bean class="com.sist.ex1.Test2Action"/>
<!--    <bean class="com.sist.ex1.myaction"/>-->
    <!--    autowire : 자동으로 t3를 채운다 bytype은 자료형이 같은얘들 -->
    <bean class="com.sist.ex1.MyAction" autowire="byType"/>
    <bean class="com.sist.ex1.MyAction2" autowire="byType"/>
    <bean class="com.sist.ex1.MyAction3"/>



    <!--    lintner에 의해 internalresourceviewresolver 이 객체가 생성 될때
            property 속성 즉 멤버변수 prefix에 value를 넣어라 web.xml에 의해서 읽어짐 -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/jsp/" />
        <property name="suffix" value=".jsp" />
    </bean>
</beans>